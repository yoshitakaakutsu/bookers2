<p id="nitice">
  <%= flash[:notice] %>
</p>

<div class="containers px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

        <table class="table">

          <tbody>
            <tr>
              <th>
                <% if @users.profile_image.attached? %>
                  <%= image_tag @users.profile_image, size:"63x63" %>
                <% else %>
                  <%= image_tag'No image', size:"63x63" %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @users.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @users.introduction %></th>
            </tr>
          </tbody>

        </table>

      <div class="row">
        <%= link_to "edit", user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
  </div>
</div>