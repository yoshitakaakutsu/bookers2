

<div class="containers px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th>
                <% if current_user.profile_image.attached? %>
                  <%= image_tag current_user.profile_image, size:"63x63" %>
                <% else %>
                  <%= image_tag'No image', size:"63x63" %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class="row">
        <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
           <tr>
             <td><% if user.profile_image.attached? %>
                    <%= image_tag user.profile_image, size:"40x40" %>
                  <% else %>
                    <%= image_tag'No image', size:"40x40" %>
                  <% end %>
              </td>
             <td><%= user.name %></td>
             <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>