

<div class="containers">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <% if @book.user.profile_image.attached? %>
                <%= image_tag @book.user.profile_image, size:"63x63" %>
              <% else %>
                <%= image_tag'No image', size:"63x63" %>
              <% end %>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class="row">
        <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
        <thead>
        <% @books.each do |book| %>
        <tbody>
           <tr>
             <td>
               <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image, size:"40x40" %>
                <% else %>
                  <%= image_tag'No image', size:"40x40" %>
                <% end %>
             </td>
             <td><%= @book.title %></td>
             <td><%= @book.body %></td>
             <td>
               <%= link_to "Edit", edit_book_path(book.id),class:"link" %>
               <%= link_to "Destroy", book_path(book.id), class:"link",method: :delete %>
             </td>
            </tr>
        </tbody>
        <% end %>
        </thead>
      </table>
      </div>

    </div>
  </div>