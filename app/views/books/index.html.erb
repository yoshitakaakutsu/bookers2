<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj form being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="containers px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th>
                <% if current_user.profile_image.attached? %>
                  <%= image_tag current_user.profile_image, size:"63x63" %>
                <% else %>
                  <%= image_tag'No image', size:"63x63" %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <div class="row">
        <%= link_to "edit", edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" %>
      </div>

      <h2 class="mt-3">New Book</h2>
      <%= form_with model:@book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
           <tr>
             <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to image_tag(book.user.profile_image,size:"40x40"),"user_path(user.id)"  %>
                <% else %>
                  <%= link_to image_tag('No image', size:"40x40"), "user_path(user.id)" %>
                <% end %>
              </td>
             <td><%= link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
            </tr>
        <% end %>
        </tbody>
        </thead>
      </table>
    </div>
  </div>
</div>